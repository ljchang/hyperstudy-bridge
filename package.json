{
  "name": "hyperstudy-bridge",
  "version": "0.7.0-beta.3",
  "type": "module",
  "description": "A unified, high-performance desktop application for bridging HyperStudy web experiments with research hardware devices.",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:mac": "./scripts/build-and-sign-mac.sh",
    "build:mac:intel": "./scripts/build-and-sign-mac.sh --intel",
    "build:mac:universal": "./scripts/build-and-sign-mac.sh --universal",
    "build:mac:notarize": "./scripts/build-and-sign-mac.sh --notarize",
    "sign:mac": "./scripts/notarize.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:load": "node scripts/load-test.js",
    "test:load:light": "node scripts/load-test.js --clients 5 --duration 15",
    "test:load:heavy": "node scripts/load-test.js --clients 50 --duration 120 --rate 20",
    "test:bench": "cd src-tauri && cargo bench --bench performance",
    "test:stress": "cd src-tauri && cargo bench --bench stress_test",
    "test:all": "npm run test && npm run test:e2e && npm run test:load:light",
    "perf:dashboard": "python -m http.server 8080 --directory src/test",
    "lint": "eslint src --ext .js,.ts,.svelte --fix",
    "lint:check": "eslint src --ext .js,.ts,.svelte",
    "format": "prettier --write \"src/**/*.{js,ts,svelte,html,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,svelte,html,css,md}\"",
    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "prepare": "npm run format && npm run type-check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-svelte": "^2.35.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.3.0",
    "prettier-plugin-svelte": "^3.2.0",
    "svelte": "^5.38.10",
    "svelte-check": "^4.0.0",
    "typescript": "^5.5.0",
    "vite": "^7.1.5",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-websocket": "^2.4.0",
    "ws": "^8.18.3"
  }
}
